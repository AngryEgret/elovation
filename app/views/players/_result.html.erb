<li>
  <%= result.created_at.to_s(:short) %>
  -
  <% result.winners.each do |winner| %>
    <%= image_tag(gravatar_url(winner, :size => 24)) %>
    <strong><%= winner.name %></strong>
  <% end %>
  beat
  <% result.losers.each do |loser| %>
    <%= image_tag(gravatar_url(loser, :size => 24)) %>
    <strong><%= loser.name %></strong>
  <% end %>
  in
  <strong><%= result.game.name %></strong>
  <% if result.most_recent? -%>
    <%= link_to "Delete", game_result_path(result.game, result), :class => "btn btn-danger", :method => :delete, :confirm => "Are you sure?" %>
  <% end -%>
</li>
