<h2><%= @game.name %></h2>
<div>
  <p><%= @game.description %></p>
  <span><%= link_to 'Edit', edit_game_path(@game) %></span>
  <span><%= link_to 'Delete', game_path(@game), :method => :delete, :confirm => "Are you sure you want to delete #{@game.name}?" %></span>
</div>

<div>
  <%= link_to 'Add a result', new_game_result_path(@game) %>
</div>
